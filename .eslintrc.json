{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "global-require": 0,
        "no-unsafe-negation": 0,
        "consistent-return": 0,
        "class-methods-use-this": 0,
        "no-await-in-loop": 0,
        "no-extra-boolean-cast": 0,
        "no-param-reassign": ["error", { "props": false }]
    }
  }